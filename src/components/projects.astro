---
import Link from "./ui/link.astro";
import VideoPlayer from "../components/video-player.tsx";
---

<section class="flex flex-col gap-6">
    <div class="flex flex-col gap-2">
        <p>
            <Link href="https://github.com/Sushants-Git/team-gap">naash</Link>
        </p>
        <p class="text-sm">
            AI-powered terminal shell that enhances speed and efficiency through
            natural language interaction, clipboard and error log history.
        </p>
        <p class="text-sm">
            Won <Link
                href="https://devfolio.co/projects/yaash-yet-another-ai-shell-192b"
                >HackThisFall 2024 Virtual</Link
            > and received a prize of $1000 USD.
        </p>
        <div>
            <VideoPlayer
                title="NAASH"
                src="https://www.youtube.com/watch?v=6xZ1Gxxiu1U"
                client:load
            />
        </div>
        <p class="text-muted text-sm">Tech used: CLI, AI</p>
        <p class="text-muted text-sm">
            Links: <Link href="https://www.youtube.com/watch?v=6xZ1Gxxiu1U"
                >Video</Link
            >
            <Link href="https://github.com/Sushants-Git/team-gap">GitHub</Link>
        </p>
    </div>

    <div class="flex flex-col gap-2">
        <p>
            <Link href="https://github.com/Sushants-Git/locus">locus</Link>
        </p>
        <p class="text-sm">
            Intelligent activity tracker that helps you understand and improve
            your focus habits.
        </p>
        <div>
            <VideoPlayer
                title="Locus Demo"
                src="https://www.youtube.com/watch?v=qW-37O67yW0"
                client:load
            />
        </div>
        <p class="text-muted text-sm">Tech used: tauri, rust, react, linux</p>
        <p class="text-muted text-sm">
            Links: <Link href="https://youtu.be/qW-37O67yW0?feature=shared"
                >Video</Link
            >
            <Link href="https://github.com/Sushants-Git/locus">GitHub</Link>
        </p>
    </div>
    <div class="flex flex-col gap-2">
        <p>
            <Link href="https://github.com/Sushants-Git/Deja-Vu">deja-vu</Link>
        </p>
        <p class="text-sm">
            AI powered chrome extension which offers a seamless way to find
            bookmarks.
        </p>
        <div>
            <VideoPlayer
                title="Deja Vu"
                src="https://www.youtube.com/watch?v=1E9y_XeGhkY"
                client:load
            />
        </div>
        <p class="text-muted text-sm">
            Tech used: transformers.js, chrome extension
        </p>
        <p class="text-muted text-sm">
            Links: <Link href="https://www.youtube.com/watch?v=1E9y_XeGhkY"
                >Video</Link
            >
            <Link href="https://github.com/Sushants-Git/Deja-Vu">GitHub</Link>
        </p>
    </div>
</section>
